    <!--  Place new controls here  -->
    <!--<Label Text="{Binding Titulo, Source={StaticResource disco1}, Mode=OneWay}" />
        <Label Text="{Binding Banda, Source={StaticResource disco1}, Mode=OneWay}" />-->

    <!--  Cambiar  -->
